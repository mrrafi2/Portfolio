{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/favicon\\.ico",
      "headers": { "Cache-Control": "public, max-age=0, must-revalidate" },
      "dest": "/favicon.ico"
    },

    {
      "src": "/assets/(.*)",
      "headers": { "Cache-Control": "public, max-age=31536000, immutable" },
      "dest": "/assets/$1"
    },

    {
      "src": "/(.*\\.(?:pdf|zip|png|jpg|jpeg|svg|webp|ico|css|js|map))$",
      "headers": { "Cache-Control": "public, max-age=0, s-maxage=31536000, must-revalidate" },
      "dest": "/$1"
    },

    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },

    {
      "src": "/index\\.html",
      "headers": { "Cache-Control": "public, max-age=0, s-maxage=60, must-revalidate" },
      "dest": "/index.html"
    },

    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
